

template(name='docs')
    .ui.container
        if currentUser
            #add.ui.basic.button 
                i.plus.icon
                |Add Document
        each docs
            +view

        


template(name='view')
    .ui.basic.segment
        .content
            a(href="/view/#{_id}")
                .image
                    img.ui.large.centered.image(src="{{c.url image_id }}")
                h1.ui.header #{title}
            .meta
                each tags
                    .ui.button.tag(class=tag_class) #{this}
            .description
                |!{description}
            // +voting
            // +favorite
            if can_edit
                .edit.ui.icon.circular.basic.button
                    i.pencil.icon.icon
